<h1>Let's eat some burgers!</h1>

<div class="row">
    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 text-center" id="imgBlock">
        <img src="https://i.giphy.com/AAfpHO80onDYk.gif" alt="burger-mouth" id="mouth"/>
    </div>
    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 text-center">
    <h2>Burgers Available to Devour</h2>
    <div class="list">
        <ol>
            {{#each burgers}}
            {{#unless this.devoured}}
            <li>
        {{!-- {{this.id}} --}}
            {{this.burger_name}}
            <div class="devButton">
                <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button type="submit" id="eat">Devour it!</button>
                </form>
            </div>
            </li>
            {{/unless}}
            {{/each}}
        </ol>
    </div>
    </div>
<div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 text-center">
    <h2>Burgers Devoured</h2>
        <div>
            <ol>
                {{#each burgers}}
                {{#if this.devoured}}
                    <li>
                        {{!-- {{this.id}} --}}
                        {{this.burger_name}}
                    </li>
                {{/if}}
                {{/each}}
            </ol>
        </div>
</div>
